{
  "name": "ntwitbot",
  "version": "1.0.0",
  "description": "A simple interactive twitter bot.",
  "author": "Jordan Sne",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "chance": "~1.0.16",
    "colors": "~1.3.0",
    "html-entities": "~1.2.1",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "coveralls": "^3.0.1",
    "eslint": "~4.19.1",
    "eslint-plugin-node": "~6.0.1",
    "jest": "^23.0.1"
  },
  "scripts": {
    "start": "node --use-strict index.js",
    "lint": "eslint index.js src/** __test__/** --ext js",
    "jest": "jest",
    "jest-coverage": "jest --coverage",
    "test": "npm run lint && npm run jest",
    "test-ci": "npm run lint && npm run jest-coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jordansne/ntwitbot"
  },
  "bugs": {
    "url": "https://github.com/jordansne/ntwitbot/issues"
  },
  "jest": {
    "coverageDirectory": "build/coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
